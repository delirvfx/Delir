{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "precommit": "lint-staged",
        "clean-modules": "rm -rf node_modules && rm -rf packages/{delir,delir-core,fleur,fleur-react}/node_modules && yarn --ignore-engines",
        "dev": "cross-env NODE_ENV=development webpack-dev-server --watch --mode production",
        "build:webpack": "cross-env NODE_ENV=production webpack --mode production"
    },
    "devDependencies": {
        "cross-env": "5.2.0",
        "husky": "0.14.3",
        "lint-staged": "7.2.0",
        "tslint-plugin-prettier": "1.3.0",
        "typescript": "2.9.2",
        "webpack": "4.16.2",
        "webpack-cli": "3.1.0",
        "webpack-dev-server": "3.1.5"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint --fix",
            "git add"
        ]
    }
}
